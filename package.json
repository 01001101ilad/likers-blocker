{
  "name": "likes-blocker",
  "version": "2.0.0",
  "description": "Block all visible likers (and optionally all retweeters) of a tweet on Twitter.",
  "main": "dist/script.js",
  "scripts": {
    "lint": "tslint src/script.ts",
    "compile": "npm run lint && tsc",
    "watch": "npm run format && npm run lint && tsc --watch",
    "format": "prettier --write src/script.ts src/script.css",
    "build": "npm run format && npm run lint && npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmstern/likers-blocker.git"
  },
  "keywords": [
    "block",
    "likers",
    "twitter",
    "tweet",
    "hatespeech"
  ],
  "author": "Daniel Morgenstern <morgenstern.daniel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmstern/likers-blocker/issues"
  },
  "homepage": "https://github.com/dmstern/likers-blocker#readme",
  "devDependencies": {
    "ncp": "^2.0.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3",
    "tslint": "^6.1.0"
  }
}
